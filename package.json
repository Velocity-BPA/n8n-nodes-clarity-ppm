{
  "name": "n8n-nodes-clarity-ppm",
  "version": "1.0.0",
  "description": "n8n community node for Broadcom Clarity PPM - Enterprise Project and Portfolio Management integration with support for projects, tasks, timesheets, resources, roadmaps, cost plans, and financial tracking.",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "clarity",
    "ppm",
    "broadcom",
    "project-management",
    "portfolio-management",
    "enterprise",
    "automation",
    "workflow"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://velobpa.com",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-clarity-ppm.git"
  },
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-clarity-ppm/issues"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ClarityPpmApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/ClarityPpm/ClarityPpm.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "eslint-plugin-n8n-nodes-base": "^1.16.2",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.62.1",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
